

pipeline {
    agent any
    parameters {
        choice(
            name: 'CHOICE_1',
            choices: 'choice_1\nchoice_2\nchoice_3',
            description: 'CHOICE_1 description',
        )

        choice(
            name: 'CHOICE_2',
            choices: 'choice_1\nchoice_2\nchoice_3\nchoice_4\nchoice_5\nchoice_6\nchoice_7\nchoice_8\nchoice_9',
            description: 'CHOICE_2 description',
        )
		}
    stages {
        stage('Example') {
            steps {
             echo " starting"
            }
			
        }
		
	stage('execute batch'){
	 steps{
	 
	 bat 'call first.bat'
	 }
			
		
	}
	stage('execute batch1'){
	 steps{
	
	bat ' type result.txt'
	}
	}
		stage("choice example") {
            steps {
                script {
		 var1 = "image1"
		 var2 = "image2"
                    env.RELEASE_SCOPE = input message: 'User input required', ok: 'Release!',
                            parameters: [choice(name: "RELEASE_SCOPE", choices: "image name\n${var1}\n${var2} ", description: "What is the release scope?")]
                }
                echo "${env.RELEASE_SCOPE}"
            }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
    }
}
